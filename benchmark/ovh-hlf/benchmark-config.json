{
  "blockchain": {
    "type": "fabric",
    "config": "benchmark/hlf-ovh/network-config.json"
  },
  "test": {
    "name": "xcc",
    "description" : "This is an example benchmark for caliper, to test the backend DLT's performance with simple account opening & querying transactions",
    "clients": {
      "type": "local",
      "number": 5
    },
    "rounds": [
      {
        "label" : "getContractDefinition",
        "txNumber" : [1],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 1}}],
        "callback" : "benchmark/ovh-hlf/getContractDefinition.js"
      }]
  },
  "monitor": {
    "type": ["docker", "process"],
    "docker":{
      "name": ["all"]
    },
    "process": [
      {
        "command" : "node",
        "arguments" : "local-client.js",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}
